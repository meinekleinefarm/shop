<% content_for :page_title do %>
  <%= t(:user_account) %>
<% end %>

<table>
  <tr data-hook="email">
    <th><%= t(:email) %></th>
    <td>
      <%= @user.email %>
    </td>
  </tr>
  <tr data-hook="roles">
    <th><%= t(:roles) %></th>
    <td>
      <%= @user.spree_roles.pluck(:name).join(', ') %>
    </td>
  </tr>
<tr data-hook="subscribed">
  <th><%= t("spree.chimpy.subscribed") %></th>
  <td>
    <%= @user.subscribed ? 'Yes' : 'No' %>
  </td>
</tr>

</table>

<p>
  <%= link_to_edit @user, :class => 'edit_user' %> <%= t(:or) %>
  <%= link_to t(:back), collection_url %>
</p>
