<footer id="footer" class="sixteen columns" data-hook><div class="container">
  
  
<% menu_bar = Spree::MenuBar.find_by_name("Footer") %>
<% links = menu_bar.menus.visible %>
<div class="nav">
  <div class="columns three alpha">
    <%= "&copy; Meine kleine Farm #{Date.today.year}".html_safe %>
  </div>
  <% links.in_groups(4, false) do |group| %>
  <div class="columns three">
    <ul>
      <% group.each do |menu| %>
      <li>      <%= link_to menu.link_text, menu.url %>
</li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div>
</div></footer>
