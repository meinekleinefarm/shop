<% cache 'spree/shared/_sidebar.html.erb', expires_in: 1.hour do%>
  <aside id="sidebar" class="columns four" data-hook><div id="sidebar_wrapper">
<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots %>
<div id="searchwrapper">
<%= form_tag spree.products_path, :method => :get, :id => 'search_form' do %>
  
  <%= search_field_tag :keywords, params[:keywords], :placeholder => t(:search) %>
  <%= image_submit_tag('store/search-btn-lupe.png', :class => 'searchbox_submit') %>
<% end %>
</div>

    <%= yield :sidebar %>
  </div>

<%= link_to t("buy_gift_card"), new_gift_card_path, :class => 'button' %>
</aside>
<% end %>