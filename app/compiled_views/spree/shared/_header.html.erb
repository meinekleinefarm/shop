<header id="header" class="row" data-hook><div class="container">
  <figure id="logo" class="columns six" data-hook><%= logo %></figure><%- menu_bar = Spree::MenuBar.find_by_name("Header") %>
<%- menu_to_display = menu_bar.menus.visible.try(:first) if menu_bar %>
<%- if menu_to_display %>
  <%= link_to(image_tag(menu_to_display.menu_image.url(:logo_color), :id => 'stoerer'), menu_to_display.url, :title => menu_to_display.link_text) %>
<% end %>
  <%= render :partial => 'spree/shared/nav_bar' %>
  
</div></header>
